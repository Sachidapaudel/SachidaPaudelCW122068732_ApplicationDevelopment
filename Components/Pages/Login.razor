@page "/login"
@inject NavigationManager Navigation
@inject SachidaPaudel.Service.UserService.IUserService UserService
@inject SachidaPaudel.Utils.CsvHelper CsvHelper
@inject ISnackbar Snackbar

@using SachidaPaudel.Utils

<div class="container mt-5">
    <!-- Login Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-success">Welcome Back!</h2>
        <p class="text-muted">Log in to access your personalized dashboard.</p>
    </div>

    <!-- Login Form -->
    <div class="card shadow border-0 mx-auto" style="max-width: 400px; border-radius: 15px;">
        <div class="card-body">
            <form>
                <!-- Username -->
                <div class="mb-3">
                    <label for="username" class="form-label fw-semibold text-success">Username</label>
                    <input type="text" class="form-control shadow-sm border-success" id="username" placeholder="Enter your username" @bind="username" />
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold text-success">Password</label>
                    <input type="password" class="form-control shadow-sm border-success" id="password" placeholder="Enter your password" @bind="password" />
                </div>

                <!-- Preferred Currency -->
                <div class="mb-4">
                    <label for="currency" class="form-label fw-semibold text-success">Preferred Currency</label>
                    <input type="text" class="form-control shadow-sm border-success" id="currency" placeholder="E.g., $" @bind="currency" />
                </div>

                <!-- Login Button -->
                <button type="button" class="btn btn-success w-100 shadow-sm fw-bold" style="border-radius: 8px;" @onclick="SetupAccount">Login</button>
            </form>

            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger mt-3 text-center">@errorMessage</div>
            }

            <!-- Register Link -->
            <div class="mt-4 text-center">
                <span class="text-muted">Don't have an account? <a href="/register" class="text-success fw-bold">Register</a></span>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #e9f7ef;
    }

    .form-control:focus {
        box-shadow: 0 0 8px rgba(72, 201, 176, 0.5);
        border-color: #48c9b0;
    }

    .btn-success:hover {
        background-color: #3cb371;
        border-color: #3cb371;
    }
</style>

@code {
    private string username = string.Empty;
    private string password = string.Empty;
    private string currency = string.Empty;
    private string errorMessage = string.Empty;

    private void SetupAccount()
    {
        try
        {
            // Load all users using CsvHelper instance
            var users = CsvHelper.LoadUsers();

            // Find the user with the matching username and password
            var user = users.FirstOrDefault(u => u.Username == username && u.Password == password);

            if (user != null)
            {
                UserService.UpdateLoginStatus(true); // Set IsLoggedIn to true
                Snackbar.Add("Successfully logged in!", Severity.Success); // Show success message
                                                                           // If setup is successful, navigate to the home page
                Navigation.NavigateTo("/");
            }
            else
            {
                // Display an error message
                errorMessage = "Invalid username or password.";
            }
        }
        catch (Exception ex)
        {
            // Handle any errors that occur during loading
            errorMessage = $"An error occurred: {ex.Message}";
        }
    }
}

